<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A_quien_le_toca_.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="A quien le toca!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Saldo Xuacu: " x:Name="lblSaldoXuacu"/>
        <Label Text="Saldo Toni: " x:Name="lblSaldoToni"/>
        <Label Text="Paga: Xuacu" x:Name="lblPaga"/>
        <Entry Placeholder="Cantidad" x:Name="entCantidad"/>
        <Button Text="Pagar" Clicked="Button_Clicked"></Button>

    </StackLayout>

</ContentPage>
